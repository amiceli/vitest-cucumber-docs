{
    "$schema": "https://biomejs.dev/schemas/2.2.3/schema.json",
    "assist": { "actions": { "source": { "organizeImports": "on" } } },
    "files": {
        "includes": [
            "**",
            "!**/package.json",
            "!**/package-lock.json",
            "!**/dist",
            "!**/.vscode/",
            "!**/examples",
            "!**/.astro"
        ]
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4
    },
    "javascript": {
        "formatter": {
            "semicolons": "asNeeded"
        }
    }
}
