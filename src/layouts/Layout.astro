---
import PackageDetails from "../components/PackageDetails.astro";
import "lineicons/web-font/lineicons.css";
import NavGroup from "../components/NavGroup.astro";

interface Props {
    title: string;
    hideMenu?: boolean;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link
            rel="icon"
            type="image/png"
            href="https://vitest-cucumber.miceli.click/logo.png"
        />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <nord-layout>
            <NavGroup />
            <nord-header slot="header">
                <h1 class="n-typescale-l">
                    {title}
                </h1>
                <div slot="end">
                    <PackageDetails />
                </div>
            </nord-header>
            <nord-stack
                direction="vertical"
                gap="l"
            >
                <div>
                    <slot />
                </div>
            </nord-stack>
        </nord-layout>
    </body>
</html>

<script 
    defer 
    src="https://plausible.volpe.xyz/script.js" 
    data-website-id="5e2eb5c2-a935-4df2-b9fb-9ad82dd0ec8a"
    is:inline
></script>

<script>
    import "@nordhealth/components/lib/index";
</script>

<style lang="scss" is:global>
    :root {
        --n-color-accent: #1c2128;
        --n-color-accent-secondary: #1c2128;
    }
</style>

<style is:global lang="scss">
    @import url("https://fonts.googleapis.com/css2?family=Exo+2:ital,wght@0,100..900;1,100..900&display=swap");
    @import "@nordhealth/css/lib/nord.min.css";
    @import "@nordhealth/themes/lib/nord-dark.css";

    :root {
        --main-color: #f87683;
    }
    html,
    body {
        padding: 0;
        margin: 0;
        font-family: "Exo 2", sans-serif;
        font-optical-sizing: auto;
        width: 100%;

        main {
            padding-top: 0;
        }
    }

    pre {
        width: fit-content;
    }

    .is--footer {
        background: var(--n-color-accent-secondary);
        text-align: center;
        padding: 8px;
    }

    .astro-code:not(.without--padding) {
        padding: 24px;
    }
    code {
        color : #D2A8FF;
    }
    h1, h2, h3 {
        color : #25D96C;
    }
    nord-stack {
        h1 {
            margin-top: -10px; // ðŸ’¡ cannot style the <main> element as it is in the shadow-dom
        }
    }
</style>

<style lang="scss" scoped>
    .container:first-of-type {
        margin-top: 100px;
    }

    .for--grid {
        display: flex;
        margin-top: 20px;
        grid-gap: 100px;

        &__left {
            flex: 0 0 300px;
        }
        &__right {
            flex: 1;
            overflow-y: hidden;
        }
    }
</style>